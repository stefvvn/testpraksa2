<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateComment" asp-controller="CommentEntities" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostId" class="control-label"></label>
